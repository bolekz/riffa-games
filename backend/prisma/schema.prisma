generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  cpf      String @unique
  email    String @unique
  whatsapp String
  senha    String

  // 🎮 Dados da Steam
  steamId     String? @unique
  steamName   String?
  steamAvatar String?

  // 🔁 Relacionamento com rifas
  rifas Rifa[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Rifa {
  id         String @id @default(cuid())
  titulo     String
  jogo       String
  item       String
  personagem String
  status     String @default("pendente")

  userId String
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
}
